#!/bin/bash

FILE1="/challenge/hidden_code_practice.py"
FILE2="/challenge/hidden_code.py"

FLAG="/flag"

MATCH="pwn.college{practice}"

if [ -r "$FLAG" ] && grep -Fq -- "$MATCH" "$FLAG"; then
  rm -f -- "$FILE2" && chmod 600 "$FILE1" && mv "$FILE1" "$FILE2"
else
  rm -f -- "$FILE1" && chmod 600 "$FILE2"

fi

rm /challenge/.init
